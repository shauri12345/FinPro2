<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".product.KategoriActivity">

    <LinearLayout
        android:id="@+id/linearMan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_tekstur"
        android:layout_weight="1">

        <ImageView
            android:layout_width="260dp"
            android:layout_height="270dp"
            android:layout_gravity="center"
            android:paddingLeft="25dp"
            android:src="@drawable/cowo_shopping"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:paddingLeft="20dp"
            android:layout_gravity="center"
            android:text="MEN'S CLOTHING AND APPARELS"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearWoman"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_white"
        android:layout_weight="1">

        <TextView
            android:layout_width="140dp"
            android:layout_height="100dp"
            android:paddingLeft="30dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:text="WOMEN'S CLOTHING AND APPARELS"
            android:textSize="20dp" />

        <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:padding="20dp"
            android:src="@drawable/woman" />

    </LinearLayout>


</LinearLayout>